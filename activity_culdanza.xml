<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white"
    tools:context=".culdanza">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/logocul"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:src="@drawable/logo" />
        <TextView
            android:id="@+id/taller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-55dp"
            android:text="@string/Danza"
            android:textColor="@color/azul"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgbelly"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:layout_gravity="center"
                android:src="@drawable/bd" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="-80dp"
                android:background="#C9E7ECEB"
                android:gravity="center"
                android:text="@string/Belly_Dance"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="-180dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgcontemporanea"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:layout_gravity="center"
                android:src="@drawable/danzacon" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="-80dp"
                android:background="#C9E7ECEB"
                android:gravity="center"
                android:text="@string/Danza_Contemporanea"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgfolklorica"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/dfolklor" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-100dp"
                android:background="#C9E7ECEB"
                android:gravity="center"
                android:text="@string/Danza_Contemporanea"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="-180dp">
            <ImageView
                android:id="@+id/imgpolinesia"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/dpolinesia" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-100dp"
                android:background="#C9E7ECEB"
                android:gravity="center"
                android:text="@string/Danza_Polinesia"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgjazz"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/bjazz" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-100dp"
                android:background="#C9E7ECEB"
                android:gravity="center"
                android:text="@string/Baile_Jazz"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="-180dp">
            <ImageView
                android:id="@+id/imgsalon"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/baile_salon" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-100dp"
                android:background="#C9E7ECEB"
                android:gravity="center"
                android:text="@string/Baile_Salon"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".hbarro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/regresar"
                android:layout_width="20dp"
                android:layout_height="70dp"
                android:layout_gravity="left"
                android:src="@drawable/atrass" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="7dp"
                android:layout_gravity="center" />


            <TextView
                android:id="@+id/taller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/moldeado"
                android:textColor="@color/azul"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="7dp"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/logocul"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:src="@drawable/logoo" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/horarios"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#C9E7ECEB"
                android:text="@string/profesoraFlorencia"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#C9E7ECEB"
                android:text="@string/correoFlorencia"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#C9E7ECEB"
                android:text="@string/DiaMJ"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#C9E7ECEB"
                android:text="@string/hbarro1"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#C9E7ECEB"
                android:text="@string/UbicacionD"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="130dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#C9E7ECEB"
                android:text="@string/profesoraFlorencia"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#C9E7ECEB"
                android:text="@string/correoFlorencia"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#C9E7ECEB"
                android:text="@string/DiaMiJ"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#C9E7ECEB"
                android:text="@string/hbarro2"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#C9E7ECEB"
                android:text="@string/UbicacionD"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>


        <ImageView
            android:id="@+id/imgcultura"
            android:layout_width="370dp"
            android:layout_height="270dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/cultura" />

        <Button
            android:id="@+id/boton_culturales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/azul"
            android:text="@string/inscribirse"
            android:textColor="@android:color/white" />

    </LinearLayout>




</ScrollView>
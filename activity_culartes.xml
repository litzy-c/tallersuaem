<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".culartes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/regresar"
                android:layout_width="20dp"
                android:layout_height="70dp"
                android:layout_gravity="left"
                android:src="@drawable/atrass" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="7dp"
                android:layout_gravity="center" />


            <TextView
                android:id="@+id/taller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/Art"
                android:textColor="@color/azul"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="7dp"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/logocul"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:src="@drawable/logoo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgbarro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                app:srcCompat="@drawable/barro" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="-80dp"
                android:background="#C9E7ECEB"
                android:gravity="center"
                android:text="@string/moldeado"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="-180dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgpintura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/pintura" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="-80dp"
                android:background="#C9E7ECEB"
                android:gravity="center"
                android:text="@string/pintura"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgdibujo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/dibujo_a_lapiz" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-100dp"
                android:background="#C9E7ECEB"
                android:gravity="center"
                android:text="@string/dibujo"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="-180dp">

            <ImageView
                android:id="@+id/imgecuaderno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/encuadernaci_n" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-100dp"
                android:background="#C9E7ECEB"
                android:gravity="center"
                android:text="@string/encuadeno"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgcatoneria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cartoneria" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-100dp"
                android:background="#C9E7ECEB"
                android:gravity="center"
                android:text="@string/carto"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="-180dp">

            <ImageView
                android:id="@+id/imgfotografia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/fotografia" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-100dp"
                android:background="#C9E7ECEB"
                android:gravity="center"
                android:text="@string/foto"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgserigrafia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/serigraf_a" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-100dp"
                android:background="#C9E7ECEB"
                android:gravity="center"
                android:text="@string/seri"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="-180dp">

            <ImageView
                android:id="@+id/imggrabado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/grabado" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-100dp"
                android:background="#C9E7ECEB"
                android:gravity="center"
                android:text="@string/grabado"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>



</ScrollView>